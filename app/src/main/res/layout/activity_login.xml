<?xml version="1.0" encoding="utf-8"?>
<com.chenantao.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".mvc.view.activity.user.LoginActivity">


    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_mask"/>


    <LinearLayout
        android:layout_width="700px"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20px">

        <!--<TextView-->
        <!--style="@style/big_large_white"-->
        <!--android:textSize="45sp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="40px"-->
        <!--android:text="登 录"-->
        <!--android:textStyle="bold"/>-->
        <com.chenantao.playtogether.mvc.view.widget.MultipleShapeImg
            android:layout_width="150px"
            android:src="@mipmap/avatar"
            android:layout_height="150px"/>

        <!--用户名-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            app:hintTextAppearance="@style/login_edittext_hint_text_appearance">

            <EditText
                android:id="@+id/etUsername"
                style="@style/mid_white"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="用户名"
                android:gravity="center|left"
                android:padding="15px"
                android:textColorHint="@color/white_mid_alpha"/>
        </android.support.design.widget.TextInputLayout>

        <!--密码-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80px"
            app:hintTextAppearance="@style/edittext_hint_text_appearance">

            <EditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                style="@style/mid_white"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="密码"
                android:textColorHint="@color/white_big_alpha"/>
        </android.support.design.widget.TextInputLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/btnLogin"
            android:text="登录"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:textSize="15px"
            android:layout_marginTop="30px"
            android:background="@color/primary_color"/>

        <com.gc.materialdesign.views.ButtonFlat
            android:id="@+id/btnRegister"
            android:layout_marginLeft="45px"
            android:layout_gravity="left"
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white_mid_alpha"
            android:text="还没有账号？"/>
    </LinearLayout>
</com.chenantao.autolayout.AutoFrameLayout>

